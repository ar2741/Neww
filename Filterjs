import React from "react";

export default function Filters({ filters, onChange, onGenerateNew, onBookmarkSelected }) {
  const set = (key) => (e) => onChange({ [key]: e.target.value });

  return (
    <>
      <div className="mb-2 fw-semibold">Reports</div>

      <div className="filters-grid mb-3">
        <div className="col-span-2">
          <label className="form-label small mb-1">Range (From)</label>
          <input
            type="month"
            className="form-control"
            value={filters.from}
            onChange={set("from")}
          />
        </div>

        <div className="col-span-2">
          <label className="form-label small mb-1">Range (To)</label>
          <input
            type="month"
            className="form-control"
            value={filters.to}
            onChange={set("to")}
          />
        </div>

        <div className="col-span-3">
          <label className="form-label small mb-1">Category</label>
          <select
            className="form-select"
            value={filters.category}
            onChange={set("category")}
          >
            <option value="">All</option>
            <option value="AML">AML</option>
            <option value="Risk">Risk</option>
            <option value="Customer">Customer</option>
          </select>
        </div>

        <div className="col-span-3">
          <label className="form-label small mb-1">Status</label>
          <select
            className="form-select"
            value={filters.status}
            onChange={set("status")}
          >
            <option value="">Any</option>
            <option value="Generated">Generated</option>
            <option value="Queued">Queued</option>
            <option value="Failed">Failed</option>
          </select>
        </div>

        <div className="col-span-2">
          <label className="form-label small mb-1">Search Report</label>
          <div className="input-group">
            <input
              className="form-control"
              placeholder="Search"
              value={filters.q}
              onChange={set("q")}
            />
            <span className="input-group-text">
              <i className="bi bi-search" />
            </span>
          </div>
        </div>
      </div>

      <div className="d-flex gap-2 mb-3">
        <button className="btn btn-success btn-icon" onClick={onGenerateNew}>
          Generate New <i className="bi bi-plus-circle ms-1" />
        </button>
        <button className="btn btn-outline-secondary btn-icon" onClick={onBookmarkSelected}>
          Bookmark Selected <i className="bi bi-star ms-1" />
        </button>
      </div>
    </>
  );
}
